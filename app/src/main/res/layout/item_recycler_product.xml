<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/productThumbnailRecycler"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/productTitleRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/productThumbnailRecycler"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NOMBRE PRODUCTO" />

    <TextView
        android:id="@+id/productPriceRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:layout_constraintStart_toEndOf="@+id/productThumbnailRecycler"
        app:layout_constraintTop_toBottomOf="@+id/productTitleRecycler"
        tools:text="00.00€" />

    <Button
        android:id="@+id/addToCartBtnRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:backgroundTint="@color/material_dynamic_primary40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productThumbnailRecycler"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:text="Añadir al carrito"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>





</androidx.constraintlayout.widget.ConstraintLayout>